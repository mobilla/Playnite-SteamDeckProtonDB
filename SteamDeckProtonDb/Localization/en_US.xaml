<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Settings UI Labels -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamDeckMetadata">Steam Deck Metadata</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamDeckMetadataDesc">Adds Steam Deck compatibility as tags and features (no categories).</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_EnableSteamDeckSync">Enable Steam Deck Sync</sys:String>
    
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbMetadata">ProtonDB Metadata</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_EnableProtonDbSync">Enable ProtonDB Sync</sys:String>
    <!-- Removed category toggles; ProtonDB now sets tags/features and optional link -->
    
    <sys:String x:Key="LOC_SteamDeckProtonDb_EnableProtonDbLink">Enable ProtonDB Link</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbLinkDesc">When enabled, adds a link to the ProtonDB game page in game details.</sys:String>
    
    <sys:String x:Key="LOC_SteamDeckProtonDb_TagsHeader">Tags</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_EnableTags">Enable Tags</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_TagsDesc">When enabled, adds tags for compatibility status (e.g., steamdeck:verified, protondb:platinum).</sys:String>
    
    <sys:String x:Key="LOC_SteamDeckProtonDb_FeaturesHeader">Features</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_EnableFeatures">Enable Features</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_FeaturesDesc">When enabled, adds features for compatibility status (e.g., Verified, Playable, Platinum).</sys:String>

    <!-- ProtonDB Section Combined Description -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbSectionDesc">Adds ProtonDB tags/features and optional link to ProtonDB page. Disable ProtonDB Sync to skip ProtonDB API calls.</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_AutoFetchDesc">Automatically fetch Steam Deck and ProtonDB status when new games are added to your library.</sys:String>
    
    <!-- Cache Settings -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_CacheSettings">Cache Settings</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_CacheTtl">Cache TTL (minutes):</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_CacheTtlDesc">How long to cache metadata before fetching fresh data from APIs. Default: 1440 minutes (24 hours).</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_UseFileCacheLabel">Use persistent file cache (recommended)</sys:String>
    
    <!-- ProtonDB API Configuration -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_ApiSettings">ProtonDB API Configuration</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ApiUrl">ProtonDB API URL:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ApiUrlDesc">The API endpoint for fetching ProtonDB data. Use {0} as placeholder for AppId.</sys:String>

    <!-- Non-Steam Matching -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_NonSteamMatchingHeader">Non-Steam Matching</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_TryNonSteamMatching">Try to match non-Steam games to Steam App IDs</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_AllowFuzzyNonSteamMatching">Allow fuzzy matching for non-Steam games</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_NonSteamMatchingDesc">Uses exact name first, then normalized fuzzy matching (strips "the", "a", "an" and requires numeric tokens to match).</sys:String>

    <!-- Rate Limiting -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_RateLimiting">Rate Limiting</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbRateLimitLabel">ProtonDB Rate Limit (ms):</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbRateLimitDesc">Minimum milliseconds between ProtonDB API requests. Default: 1000ms (~60 req/min).</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamStoreRateLimitLabel">Steam Store Rate Limit (ms):</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamStoreRateLimitDesc">Minimum milliseconds between Steam Store API requests. Default: 600ms (~100 req/min). Minimum: 100ms.</sys:String>

    <!-- Debug / Progress -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_DebugHeader">Debug</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_DebugProgressDelay">Progress Delay (ms):</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_DebugProgressDelayDesc">Optional artificial delay applied per game while running the menu action. Useful to observe progress updates; leave 0 to disable.</sys:String>
    
    <!-- Tag & Feature Names Configuration -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_TagFeatureNamesHeader">Tag &amp; Feature Names</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamDeckNamesHeader">Steam Deck Tag/Feature Names</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SteamDeckNamesDesc">Customize the tag and feature names used for Steam Deck compatibility.</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_TagPrefix">Tag Prefix:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_VerifiedTag">Verified Tag:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_PlayableTag">Playable Tag:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_UnsupportedTag">Unsupported Tag:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_VerifiedFeature">Verified Feature:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_PlayableFeature">Playable Feature:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_UnsupportedFeature">Unsupported Feature:</sys:String>
    
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbNamesHeader">ProtonDB Tag/Feature Names</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbNamesDesc">Customize the tag and feature prefixes and rating names used for ProtonDB tiers.</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_FeaturePrefix">Feature Prefix:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_ProtonDbRatingNamesHeader">ProtonDB Rating Names</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_PlatinumRating">Platinum:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_GoldRating">Gold:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_SilverRating">Silver:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_BronzeRating">Bronze:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_PlausibleRating">Plausible:</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_BorkedRating">Borked:</sys:String>
    
    <!-- Removed category localization entries -->
    
    <!-- Links -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_Link_ProtonDb">ProtonDB</sys:String>
    
    <!-- Error Messages -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_Error_InvalidApiUrl">Invalid ProtonDB API URL format.</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_Error_InvalidCacheTtl">Cache TTL must be a positive number.</sys:String>
    
    <!-- Menu Items -->
    <sys:String x:Key="LOC_SteamDeckProtonDb_MenuItem_Description">Add Steam Deck/ProtonDB tags and link</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_MenuItem_MissingOnly">Add Steam Deck/ProtonDB tags and link (missing only)</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_MenuItem_MissingOnly_Empty">Selected games already have Steam Deck/ProtonDB data.</sys:String>
    <sys:String x:Key="LOC_SteamDeckProtonDb_MenuItem_Section">@Steam Deck ProtonDB</sys:String>
</ResourceDictionary>